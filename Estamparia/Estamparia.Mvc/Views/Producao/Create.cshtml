@model Estamparia.Aplication.Models.Producao

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar</h1>

<h4>Produção</h4>
<hr />
@using (Html.BeginForm())
{
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Data</label>
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraInicio" class="control-label">Horario de Inicio</label>
                @Html.EditorFor(model => model.HoraInicio, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="HoraInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraFim" class="control-label">Horario Fim</label>
                @Html.EditorFor(model => model.HoraFim, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="HoraFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeHora" class="control-label">Quantidade de peças por Hora</label>
                @Html.EditorFor(model => model.QuantidadeHora, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="QuantidadeHora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MediaFinal" class="control-label">Media Final</label>
                @Html.EditorFor(model => model.MediaFinal, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="MediaFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadePecas" class="control-label">Quantidade Final de Peças</label>
                @Html.EditorFor(model => model.QuantidadePecas, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="QuantidadePecas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorUnitario" class="control-label">Valor Unitario da Peça</label>
                @Html.EditorFor(model => model.ValorUnitario, new { htmlAttributes = new { @class = "form-control" } })
                <span asp-validation-for="ValorUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
}
<div>
    @Html.ActionLink("Voltar a Lista", "List")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
